  <%= simple_form_for [@product, @subproduct] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.association :product, disabled: true %>
      <%= f.input :name %>
      <%= f.association :bank %>
    </div>

    <div class="form-actions mb-5">
      <%= f.button :submit %>
    </div>
<% end %>
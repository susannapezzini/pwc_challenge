<div class="form_container">
<h2 class="h2">Add a new bank</h2>
  <% if @user.admin %>
    <%= simple_form_for @bank do |f| %>
      <%= f.input :name  %>
      <%= f.input :address  %>
      <%= f.input :country, prompt: 'Select Country',  priority: ["PT"] %>
      
      <%= simple_fields_for @website do |w| %>
        <%= w.input :url, label: "Primary URL" %>
      <% end %>

      <br>
      <%= f.submit class: 'btn' %>
    <% end %>
  <% else %>
    <h1>Does Not Have Permission to Access Content</h1>
  <% end %>
</div>
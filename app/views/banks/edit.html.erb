<div class="form_container">
<h2 class="h2">Edit <%= @bank.name.capitalize %></h2>
    <%= simple_form_for @bank do |f| %>
      <%= f.input :name  %>
      <%= f.input :address  %>
      <%= f.input :country, priority: ["PT"]%>

      <%= simple_fields_for @websites.first do |w| %>
        <%= w.input :url, label: "Primary Website" %>
      <% end %>

      <% if @websites.length > 1 %>
        <p class="d-inline">Other Websites</p>
        <%= link_to "Manage", bank_websites_path(@bank), class: "btn-small" %>

        <% @websites.each_with_index do |website, index| %>
          <p class="pl-3"><%= index == 0 ? "" : website.url %></p>
        <% end %>

      <% end %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
</div>
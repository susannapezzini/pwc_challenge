<div class="contain pb-0">
  <% unless current_user.admin?%>
    <div class="crumbs">
      <%= link_to 'Banks', banks_path, class: 'link' %>
      <span> > <%= @bank.name.capitalize%></span>
    </div>
  <%end%>
</div>

<div class="contain">
  <div class="actions">
    <p>Jump to: Subproducts Users</p>
  </div>
</div>


<% if current_user.admin?%>
  <div class="contain">
    <div class="admin">
<%else%>
  <div class="container mb-4 mt-4">
    <div class="row justify-content-center">
<%end%>
      <div class="col-5">
        <div class="card  mb-3" style= "box-shadow: 0 0 15px rgba(0,0,0,0.2)">
          <div class="card-header" style="font-size: 30px"><%= @bank.name.capitalize %></div>
          <div class="card-body">
            <p class="card-text text-capitalize" style="font-weight: bold">Details </p>
            <p class="card-text text-capitalize" style="font-weight: bold">Websites: </p>
              <% @bank.websites.each do |w|%>
              <span class="card-text"><%=w.url%></span>
              <%end%>
            
            <p class="card-text text-capitalize" style="font-weight: bold">Address: <span style="font-weight: 300"><%= @bank.address %></span> </span>
            <p class="card-text text-capitalize" style="font-weight: bold">Country: <span style="font-weight: 300"><%= @bank.country %></span> </p>
          </div>
        </div>
    </div>
    <% if current_user.admin?%>
      <div class="actions">
        <h3 class="mb-3">Actions:</h3>
        <%= link_to bank_websites_path(@bank), class: 'link mb-2' do %>
          <i class="fas fa-link"></i>
          <span>Manage Websites</span>
        <%end%>
        <%#= link_to bank_users_path(@bank), class: 'link mb-2' do %>
          <%# <i class="fas fa-users"></i>
          <span>Manage Users</span> %>
        <%#end%>
        <%= link_to edit_bank_path(@bank), class: 'link mb-2' do %>
          <i class="far fa-edit"></i>
          <span>Edit Bank</span>
        <%end%>
        <%= link_to bank_path(@bank), method: :delete, class: 'link' , data: { confirm: 'This will permanently delete the bank. Are you sure?' } do %>
          <i class="far fa-trash-alt"></i>
          <span>Delete Bank</span>
        <%end%>
      </div>
    <%end%>
      </div>
      </div>

<div class="contain-color">
  <h6 class="small_title"><%= @bank.name.capitalize%>'s Subproducts offer</h6>
    <div class="cards">

      <% @subproducts.each do |b|%>
        <div class="bank-card">
          <p class="card_title"><strong><%= link_to "#{b.search_name}", '#', class: 'card_title', style: "text-decoration: none;" %></strong></p>
          <p class="card_text"><strong>Product Family:</strong><br><%= b.product.name %></p>
          <% if current_user.admin?%>
            <div class="card_action">
              <%= link_to '#', class: 'link mb-2' do %>
              <i class="far fa-edit"></i>
              <span>Edit Subproduct</span>
              <%end%>
              <%= link_to '#', method: :delete, class: 'link' , data: { confirm: 'This will permanently delete the bank. Are you sure?' } do %>
              <i class="far fa-trash-alt"></i>
              <span>Delete Subproduct</span>
              <%end%>
            </div>
          <%end%>
        </div>
      <%end%>
    </div>
  <% if current_user.admin?%>
    <%= link_to 'Add New Subproduct', new_bank_subproduct_path(@bank), class: 'btn'%>
  <%end%>
</div>

<%if current_user && current_user.admin?%>
<div class="contain">
  <h6 class="small_title"><%= @bank.name.capitalize%>'s Users</h6>
      <div class="cards">

      <% @users.each do |b|%>
        <div class="bank-card">
          <p class="card_title"><strong><%= link_to "#{b.name}", '#', class: 'card_title', style: "text-decoration: none;" %></strong></p>
          <p class="card_text"><strong>Email:</strong><br><%= b.email %></p>
          <% if current_user.admin?%>
          <div class="card_action">
          </div>
          <%end%>
        </div>
      <%end%>
    </div>
    <%= link_to 'Add New User', new_bank_user_path(@bank), class: 'btn'%>
</div>
<%end%>

<div class="contain">
  <%= link_to 'Back', banks_path, class: 'btn'%>
</div>


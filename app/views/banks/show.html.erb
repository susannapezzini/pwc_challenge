<div class="contain pb-0">
  <div class="crumbs">
    <% unless current_user.admin?%>
      <%= link_to 'Banks', banks_path, class: 'link' %>
      <span> > <%= @bank.name.capitalize%></span>
    <%else%>
      <p class="link">Banks > <%= @bank.name.capitalize%></p>
    <%end%>
  </div>
</div>


<% if current_user.admin?%>
  <div class="contain">
    <div class="admin">
<%else%>
  <div class="container mb-4 mt-4">
    <div class="row justify-content-center">
<%end%>
      <div class="col-5">
        <div class="card  mb-3" style= "box-shadow: 0 0 15px rgba(0,0,0,0.2)">
          <div class="card-header" style="font-size: 30px"><%= @bank.name.capitalize %></div>
          <div class="card-body">
            <p class="card-text text-capitalize" style="font-weight: bold">Details </p>
            <p class="card-text text-capitalize" style="font-weight: bold">Website: <span style="font-weight: 300"><%#= @bank.website %></span> </p>
            <p class="card-text text-capitalize" style="font-weight: bold">Address: <span style="font-weight: 300"><%= @bank.address %></span> </span>
            <p class="card-text text-capitalize" style="font-weight: bold">Country: <span style="font-weight: 300"><%= @bank.country %></span> </p>
          </div>
        </div>
    </div>
    <% if current_user.admin?%>
      <div class="actions">
        <h3 class="mb-3">Actions:</h3>
        <%= link_to '#', class: 'link mb-2' do %>
          <i class="far fa-plus-square"></i>
          <span>Add website</span>
        <%end%>
        <%= link_to edit_bank_path(@bank), class: 'link mb-2' do %>
          <i class="far fa-edit"></i>
          <span>Edit Bank</span>
        <%end%>
        <%= link_to bank_path(@bank), method: :delete, class: 'link' , data: { confirm: 'This will delete permanently the bank. Are you sure to proceed?' } do %>
          <i class="far fa-trash-alt"></i>
          <span>Delete Bank</span>
        <%end%>
      </div>
    <%end%>
      </div>
      </div>

<div class="contain-color">
  <h6 class="small_title"><%= @bank.name.capitalize%>'s products offer</h6>
</div>


<div class="contain">
  <%= link_to 'Back', :back, class: 'btn'%>
</div>


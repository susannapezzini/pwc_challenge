<div class="contain">
    <%= link_to 'Back', bank_path(@bank), class: 'btn-outline float-right'%>

  <h1 class="mb-5"><%= @bank.name.capitalize %>'s Websites</h1>  


    <h5 class="small_title">Websites: </h5>
    <% @websites.each do |website| %>
        <p><%= website.url %>
        <%= link_to website_path(website), method: :delete, data: {confirm: "Permanently delete website?"} do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
        </p>
    <% end %>


      <%= simple_form_for [@bank, @new_website] do |f| %>
        <%= f.input :url, label: false, placeholder: "New URL", class: "d-inline-block" %>
        <%= f.button :submit, "Add", class: 'btn' %>
      <% end %>

</div>

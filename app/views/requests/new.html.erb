<div class="form_container form_container-height">
  <h2 class="h2">Create new Request</h2>
  <h5 class="mt-3">Bank: <%= @document.bank.name%></h5>
  <h5 class="mt-3 mb-3">Document: <%= link_to @document.file_url, @document.file_url, class: 'link link-dark', target: '_blank'%></h5>
  <%= simple_form_for [@document, @request] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :content %>
      <%= f.input :product, as: :select, collection: ["demand deposits", "housing credits"] %>
      <%= f.input :pages, label: "Enter the page numbers of the selected product from the link above (separated by commas, e.g. 1, 2, 9)" %>
    </div>

      <%= f.submit class: 'btn'%>
  <% end %>
</div>
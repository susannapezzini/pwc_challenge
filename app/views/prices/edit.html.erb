<div class="contain">
<h1>Edit <%= @price.name.capitalize%></h1>
  <%= simple_form_for @price do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.association :fee %>
      <%= f.association :subproduct %>
      <%#= f.association :document %>
      <%= f.input :name %>
      <%= f.input :amount %>
      <%= f.input :category %>
      <%= f.input :tax_category %>
      <%= f.input :tax %>
      <%= f.input :tax_amount %>
      <%= f.input :status %>

      <%= simple_fields_for @price.fee do |w| %>
        <%= w.input :active %>
        <%= w.input :name %>
      <% end %>
    </div>

    <div class="form-actions mb-5">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
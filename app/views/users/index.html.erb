<div class="container text-center">
  <h3 class="mt-3 mb-5"><%= "#{@bank.name} Users" %></h3>
  <div class="container w-75 text-left">
    <div class="row border-bottom mb-0">
      <div class="col-sm-5">
        <h5>Name</h5>
      </div>
      <div class="col-sm-5">
        <h5>Email</h5>
      </div>
      <div class="col-sm-2">
        <h5>Action</h5>
      </div>
    </div>
    <% @users.each do |user| %>
    <div class="row">
        <div class="col-sm-5">
          <p><%= user.name%></p>
        </div>
        <div class="col-sm-5">
          <p><%= user.email %><p>
        </div>
        <div class="col-sm-2">
          <%= link_to edit_user_path(user) do %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to user_path(user), method: :delete, data: { confirm: 'Permanently delete user?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add new user", new_bank_user_path, class: "btn btn-primary my-5" %>

  <div class="text-center">
    <%= link_to "Back", bank_path(@bank), class: "btn btn-primary" %>
  </div>
</div>